<%= form_for [@room, @message] do |form| %>
  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <% form.label :content, style: "display: block" %>
    <%= form.text_area :content, class: "form-control", placeholder: "type your message here" %>
  </div>

  <div>
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :message_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>

  <div>
    <% form.label :room_id, style: "display: block" %>
    <%= form.text_field :room_id, id: :message_room_id, class: "form-control", value: @room.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
