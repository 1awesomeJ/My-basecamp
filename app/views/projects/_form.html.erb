<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <% form.label :Name, style: "display: block" %>
    <%= form.text_field :Name, class: "form-control", placeholder:"Name (Enter the project's name)" %>
  </div>

  <div class = "form-group">
    <% form.label :Description, style: "display: block" %>
    <%= form.text_field :Description, class: "form-control", placeholder: "Description (Describe the project)" %>
  </div>

  <div class = "form-group">
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :project_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>
  <div class = "form-group">
    <% form.label :uploads, I18n.t('active_storage.attachments.add'), style: "display: block" %>
    <%= form.file_field :uploads, multiple: true, class: "form-control", placeholder: "click on the button to add attachments(maximum size should be 10MB" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
