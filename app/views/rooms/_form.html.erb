<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :room_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class = "form-group">
    <% form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name(Enter the thread's name)" %>
  </div>

  <div>
    <%= form.submit "Create/Update thread", class: "btn btn-success" %>
  </div>
<% end %>
